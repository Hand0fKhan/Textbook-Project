@{
}

@model  IEnumerable<string>

<a asp-controller="Home" asp-action="Index" asp-route-bookType="" asp-route-pageNum ="1" class="btn btn-outline-dark">Home</a>

@foreach (string t in Model)
{
    <a asp-controller="Home" asp-action="Index" asp-route-bookType="@t" asp-route-pageNum="1" 
       class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-dark")">@t</a>
}
